# Environment variables for Obsidian Chat
# Rename this file to .env and fill in your values

# Database configuration
DATABASE_URL=sqlite:///./obsidian_chat.db

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Embedding settings
EMBEDDING_MODEL=openai  # openai or local
EMBEDDING_DIMENSION=1536  # Default for OpenAI Ada model

# Vector store settings
VECTOR_STORE_TYPE=faiss
VECTOR_STORE_PATH=./vector_store

# Chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Default Obsidian vault (optional)
DEFAULT_VAULT_PATH=/path/to/your/obsidian/vault